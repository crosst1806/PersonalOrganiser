<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/act_id"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="1001"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:paddingLeft="6dp"/>

    <TextView
        android:id="@+id/act_description"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="Activity Description Goes Here"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:paddingLeft="6dp"/>

    <TextView
        android:id="@+id/act_median_minutes"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="1hr 26min"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:paddingLeft="6dp"/>

    <TextView
        android:id="@+id/act_role"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="UOL Employee"
        android:paddingLeft="6dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/act_location"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="The Knoll House"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:paddingLeft="6dp"/>

    <TextView
        android:id="@+id/act_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:paddingLeft="6dp"/>


</LinearLayout>



