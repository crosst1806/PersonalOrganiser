<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/td_record_no"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="1001"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:paddingLeft="6dp"/>

    <TextView
        android:id="@+id/td_description"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="To Do Description goes here and here"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:paddingLeft="6dp"/>

    <TextView
        android:id="@+id/td_target_date_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="2018 06 18 23:00:00"
        android:paddingLeft="6dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/td_role"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="UOL Employee"
        android:paddingLeft="6dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/td_location"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="The Knoll House"
        android:paddingLeft="6dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

    <TextView
        android:id="@+id/td_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="99"
        android:paddingLeft="6dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>


</LinearLayout>



