<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/paa_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Description goes here"
        android:textColor="#0000FF"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/paa_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_arrow_black_24dp"/>

        <ImageButton
            android:id="@+id/paa_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pause_black_24dp" />

        <ImageButton
            android:id="@+id/paa_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done_black_24dp" />

        <ImageButton
            android:id="@+id/paa_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_black_24dp"/>

        <ImageButton
            android:id="@+id/paa_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exit_to_app_black_24dp" />

    </LinearLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/not_necessary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not Necessary"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <RadioButton
            android:id="@+id/lack_of_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lack of Time"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <RadioButton
            android:id="@+id/adverse_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adverse Weather"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <RadioButton
            android:id="@+id/no_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limited Access"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

    </RadioGroup>

</LinearLayout>