<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingLeft="6dp"
    android:paddingTop="4dp">


    <TextView
        android:id="@+id/ait_id"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="1001"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/ait_activity"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:text="Activity Description Goes Here"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/ait_frequency"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:text="Every N Days"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/ait_start_date"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:text="Mon 18 Jun 1962"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/ait_end_date"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:text="Tue 19 Jun 1962"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

</LinearLayout>




