<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <!-- Id Label -->
        <TextView
            android:id="@+id/pa_record_no_label"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Id"
            android:textColor="#0000FF" />


        <!-- Id Input -->
        <TextView
            android:id="@+id/pa_record_no"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="0"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <!-- Owner Label -->
        <TextView
            android:id="@+id/pa_owner_label"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Owner"
            android:textColor="#0000FF" />


        <!-- Owner Input -->
        <TextView
            android:id="@+id/pa_owner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="President Lincoln"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />


        <!-- Owner Type Label -->
        <TextView
            android:id="@+id/pa_owner_type_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Owner Type"
            android:textColor="#0000FF" />

        <!-- Owner Type Input -->
        <TextView
            android:id="@+id/pa_owner_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Group"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <!-- Role Label -->
        <TextView
            android:id="@+id/pa_role_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Role"
            android:textColor="#0000FF" />

        <!-- Role View -->
        <TextView
            android:id="@+id/pa_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="UOL Employee"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <!-- Role Combo Box -->
        <Spinner
            android:id="@+id/pa_role_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">

        </Spinner>


        <!-- Location Label -->
        <TextView
            android:id="@+id/pa_location_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Location"
            android:textColor="#0000FF" />

        <!-- Location View -->
        <TextView
            android:id="@+id/pa_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="The Town Hall"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <!-- Location Combo Box -->
        <Spinner
            android:id="@+id/pa_location_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">

        </Spinner>

        <!-- Activity Label -->
        <TextView
            android:id="@+id/pa_activity_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Activity"
            android:textColor="#0000FF" />

        <!-- Activity View -->
        <TextView
            android:id="@+id/pa_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Fly Fishing all Day"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <!-- Activity Combo Box -->
        <Spinner
            android:id="@+id/pa_activity_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">

        </Spinner>


        <!-- Code Label -->
        <TextView
            android:id="@+id/pa_code_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Code"
            android:textColor="#0000FF" />

        <!-- Code View -->
        <TextView
            android:id="@+id/pa_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="CODE-1"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <!-- Description Label -->
        <TextView
            android:id="@+id/pa_description_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Description"
            android:textColor="#0000FF" />

        <!-- Description View -->
        <TextView
            android:id="@+id/pa_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="A Lovely Fishing Holiday !"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <EditText
            android:id="@+id/pa_description_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="16dp"
            android:inputType="textCapWords"
            android:text="Hello Dolly" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Median Minutes Label -->
            <TextView
                android:id="@+id/pa_median_minutes_label"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Median Minutes"
                android:textColor="#0000FF" />

            <!-- Median Minutes View -->
            <TextView
                android:id="@+id/pa_median_minutes"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="66 mins"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">


            <!-- Priority Label -->
            <TextView
                android:id="@+id/pa_priority_label"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Priority"
                android:textColor="#0000FF" />

            <!-- Priority View -->
            <TextView
                android:id="@+id/pa_priority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="3"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <!-- Priority Combo Box -->
            <Spinner
                android:id="@+id/pa_priority_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">

            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Generated By Label -->
            <TextView
                android:id="@+id/pa_generated_by_label"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Generated By"
                android:textColor="#0000FF" />

            <!-- Generated By View -->
            <TextView
                android:id="@+id/pa_generated_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Something here"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Generator Id Label -->
            <TextView
                android:id="@+id/pa_generator_id_label"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Generator Id"
                android:textColor="#0000FF" />

            <!-- Generated By View -->
            <TextView
                android:id="@+id/pa_generator_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="1002"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Start Date Label -->
            <TextView
                android:id="@+id/pa_start_date_label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:textColor="#0000FF" />

            <!-- Start Date View -->
            <TextView
                android:id="@+id/pa_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="04 Apr 2018"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <!-- Start Date Input-->
            <EditText
                android:id="@+id/pa_start_date_edit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:hint="Enter Date"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">


            <!-- Start Time Label -->
            <TextView
                android:id="@+id/pa_start_time_label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Start Time"
                android:textColor="#0000FF" />

            <!-- Start Time View -->
            <TextView
                android:id="@+id/pa_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="23:10"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <!-- Start Time Input-->
            <EditText
                android:id="@+id/pa_start_time_edit"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:hint="Enter Time"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        </LinearLayout>

        <!-- End Date Time Label -->
        <TextView
            android:id="@+id/pa_end_date_time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="End Date Time"
            android:textColor="#0000FF" />

        <!-- End Date Time View -->
        <TextView
            android:id="@+id/pa_end_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="04 Apr 2018 16:10"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">


            <!-- Time Taken Label -->
            <TextView
                android:id="@+id/pa_time_taken_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Taken"
                android:textColor="#0000FF" />

            <!-- Time Taken By View -->
            <TextView
                android:id="@+id/pa_time_taken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="1hr 35min"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Status Label -->
            <TextView
                android:id="@+id/pa_status_label"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="#0000FF" />

            <!-- Status View -->
            <TextView
                android:id="@+id/pa_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Pending"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Data Sensitivity Label -->
            <TextView
                android:id="@+id/pa_data_sensitivity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sensitivity"
                android:textColor="#0000FF" />

            <!-- Data Sensitivity Text Field -->
            <TextView
                android:id="@+id/pa_data_sensitivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Data Sensitivity"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <Spinner
                android:id="@+id/pa_data_sensitivity_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">

            </Spinner>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Time Stamp  Label -->
            <TextView
                android:id="@+id/pa_time_stamp_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lmd"
                android:textColor="#0000FF" />

            <!-- Time Stamp Input -->
            <TextView
                android:id="@+id/pa_time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="24 Dec 1982 22:48:00"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">


            <!-- Last Modified By Label -->
            <TextView
                android:id="@+id/pa_last_modified_by_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Lmb"
                android:textColor="#0000FF" />

            <!-- Last Modified By Input -->
            <TextView
                android:id="@+id/pa_last_modified_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="churchillw"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>